<Window
    x:Class="Widgets_Games.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" x:Name="ventana">

    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="Enter a link of a Steam game:" Margin="0,0,0,30" HorizontalAlignment="Center"/>

        <TextBox x:Name="tbSteamEnlaceJuego" MinWidth="300" Margin="0,0,0,30" HorizontalAlignment="Center"/>

        <Button x:Name="botonSteamGenerarPlantilla" Margin="0,0,0,30" HorizontalAlignment="Center" IsEnabled="False">Generate</Button>

        <TextBlock x:Name="tbMensaje" HorizontalAlignment="Center"/>
    </StackPanel>
</Window>
